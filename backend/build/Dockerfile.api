FROM golang:1.21.1-alpine as builder

WORKDIR /go/src/github.com/htchan/WebHistory

COPY ./go.mod ./go.sum .

RUN --mount=type=cache,target=$GOPATH/pkg \
    apk add gcc musl-dev libc-dev ; go mod download -x

COPY ./internal ./internal
COPY ./cmd/api ./cmd/api

RUN --mount=type=cache,target=/root/.cache/go-build \
    go build -v ./cmd/api


FROM alpine

WORKDIR /usr/src/app

COPY --from=builder /go/src/github.com/htchan/WebHistory/api .

ENTRYPOINT ["/usr/src/app/api"]
